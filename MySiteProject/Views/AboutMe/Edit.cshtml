@model MySiteProject.Models.Entities.AboutMe

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>AboutMe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AboutMeID" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/ckeditor/ckeditor.js"></script>
            <script>
                $(document).ready(function () {
                    CKEDITOR.replace('test');
                })
            </script>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea name="Description" id="test"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionDate" class="control-label"></label>
                <input asp-for="DescriptionDate" class="form-control" />
                <span asp-validation-for="DescriptionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionPhoto" class="control-label"></label>
                <input asp-for="DescriptionPhoto" class="form-control" type="file" name="DescriptionPhoto" />
                <span asp-validation-for="DescriptionPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

